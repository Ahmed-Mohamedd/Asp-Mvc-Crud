@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Update Department</h1>
<br/>
<br/>

<form asp-action="Edit" asp-controller="Department">
    <input  hidden asp-for="Id"/>
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Save"/> |
    <a asp-controller="Department" asp-action="Index" class="btn btn-light">Back to list</a>

</form>